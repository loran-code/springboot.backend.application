{
  "title": "Novi backend API assignment",
  "description": "RESTful API that demonstrate different relations within a relational database",
  "contact": {
    "name": "Loran van den Akker"
  },
  "version": "1.0.0",
  "endpoints": [
    {
      "method": "GET",
      "endpoint":"/",
      "description": "Returns the home response."
    },
    {
      "method": "GET",
      "endpoint":"/info",
      "description": "Returns this description of the API."
    },

    {
      "method": "GET",
      "endpoint":"students",
      "description": "Returns a list of students."
    },
    {
      "method": "GET",
      "endpoint":"students/{id}",
      "description": "Returns one book."
    },

    {
      "method": "GET",
      "endpoint":"users",
      "description": "Returns a list of users."
    },
    {
      "method": "GET",
      "endpoint":"users/{username}",
      "description": "Returns one user."
    }
  ]

}