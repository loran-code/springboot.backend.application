{
  "title": "Novi backend API assignment",
  "description": "RESTful API that demonstrate different relations within a relational database",
  "contact": {
    "name": "Loran van den Akker"
  },
  "version": "1.0.0",
  "endpoints": [
    {
      "General": [
        {
          "method": "GET",
          "endpoint": "/",
          "description": "Returns the home response."
        },
        {
          "method": "GET",
          "endpoint": "/info",
          "description": "Returns this description of the API."
        }
      ]
    },
    {
      "Authentication": [
        {
          "method": "POST",
          "endpoint": "api/auth/register",
          "description": "Registers a new user."
        },
        {
          "payload example": [
            {
              "email": "user@email.com",
              "username": "user",
              "password": "password"
            }
          ]
        },
        {
          "method": "POST",
          "endpoint": "api/auth/signin",
          "description": "Returns the authentication page."
        },
        {
          "payload example": [
            {
              "username": "user",
              "password": "password"
            }
          ]
        }
      ]
    },
    {
      "Customer": [
        {
          "method": "GET",
          "endpoint": "api/customer/all",
          "description": "Get all customers"
        },
        {
          "method": "GET",
          "endpoint": "api/customer/id",
          "description": "Get customer by id"
        },
        {
          "method": "GET",
          "endpoint": "api/customer",
          "description": "Get customer by lastname"
        },
        {
          "payload example": [
            {
              "URI": "?lastname={lastname}"
            }
          ]
        },
        {
          "method": "POST",
          "endpoint": "api/customer",
          "description": "register a customer"
        },
        {
          "payload example": [
            {
              "URI": "?lastname={lastname}"
            },
            {
            }
          ]
        }
      ]
    }
  ]
}